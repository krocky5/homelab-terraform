# Example configuration - copy to terraform.tfvars and fill in real values

proxmox_api_url = "https://your-proxmox-host:8006/api2/json"
proxmox_user    = "root@pam"
proxmox_password = "your-password-here"

vm_password = "your-vm-password"
ssh_pub_key = "ssh-rsa AAAA... your-key-here"
ssh_private_key = "~/.ssh/id_rsa_k3s"

master_ip = "192.168.4.180"
gateway   = "192.168.4.1"
k3s_token = "run-after-master-setup"

workers = {
  worker1 = { name = "k3s-worker-1", ip = "192.168.4.181", node = "worker3" }
  worker2 = { name = "k3s-worker-2", ip = "192.168.4.182", node = "worker3" }
}
